<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Micro-Focus | Access Keys</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/home.css">
    <!-- DataTables CSS -->
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.11.5/css/dataTables.bootstrap5.min.css">
    <link rel="stylesheet" href="/home.css">
</head>
<body>
    <header>
        <nav class="navbar">
            <a href="#" class="logo">
                <img src="images/logo.jpg" alt="logo">
                <h2>Micro-Focus</h2>
            </a>
            <form action="/create-key" method="post"><button class="btnd">Create Access Key</button></form>
            <a href="/logout">
            <button class="login-btn">LOG OUT</button>
            </a>
        </nav>  

        <style>
            main {
                height: 100vh;
                overflow-y: hidden;
                /* border: 1px solid red;   */
            }

            .wrapper {
                /* border: 1px solid red;  */
                margin-top: 8%;
                height: 80%;
                overflow-y: scroll;
            }

            .dt-wrap {
                border-radius: 10px;
            }
        </style>
    </header>
        <!-- <div class="content">
            <h2>Hello IT Personnel</h2>
        </div> -->
        <main>
            <div class="container-fluid wrapper">
                <div class="row">
                    <div class="col-12">
                        <div class="container dt-wrap mt-5  text-white ">
                            <table id="main-table" class="table table-striped text-center" style="width:100%">
                                <thead>
                                    <tr>
                                        <th>No:</th>
                                        <th>Key</th>
                                        <th >Status</th>
                                        <th>Procurement Date</th>
                                        <th>Expiry Date</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% let count = 1; keys.forEach(key => { %>
                                    <tr>
                                        <td><%= count %></td>
                                        <td><%= key.token %></td>
                                        <!-- <td ><span class="bg-success p-2 rounded"><%= key.tokenStatus %></span></td> -->
                                        <td>
                                            <% if (key.tokenStatus === 'revoked' || key.tokenStatus === 'expired') { %>
                                                <span class="bg-danger p-2 rounded"><%= key.tokenStatus %></span>
                                            <% } else if (key.tokenStatus === 'active') { %>
                                                <span class="bg-success p-2 rounded"><%= key.tokenStatus %></span>
                                            <% } else { %>
                                                <span class="bg-secondary p-2 rounded"><%= key.tokenStatus %></span>
                                            <% } %>
                                        </td>
                                        <td><%= key.procDate %></td>
                                        <td><%= key.expireAt %></td>
                                    </tr>
                                    <% count++ }) %>
                                </tbody>
                            </table>
                        </div>
                        
                    </div>
                </div>
                
            </div>
        </main>


<script src="https://code.jquery.com/jquery-3.7.1.min.js" integrity="sha256-/JqT3SQfawRcv/BIHPThkBvs0OEvtFFmqPF/lYI/Cxo=" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
<!-- DataTables JS -->
<script type="text/javascript" src="https://cdn.datatables.net/1.11.5/js/jquery.dataTables.min.js"></script>
<script type="text/javascript" src="https://cdn.datatables.net/1.11.5/js/dataTables.bootstrap5.min.js"></script>
<!--custom scripts-->
<script>
    $(document).ready(function() {
        $('#main-table').DataTable();
    });
</script>

</body>
</html>