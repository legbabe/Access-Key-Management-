<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/login.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <title>Login | Access Key Management</title>
</head>
<body>
    <div class="blur-bg-overlay"></div>
    <div class="form-popup">
        <a href="/">
            <span class="close-btn material-symbols-rounded"><i class="fa-solid fa-xmark red-icon"></i>
        </a>
        <div class="form-box login">
            <div class="form-content">
                <h2>Log In</h2>
            <form action="" method="post">
                <div class="input-field">
                    <label>Email</label>
                    <input type="email" name="email" required>
                    <div class="email error"></div>
                </div>
                <br>
                <div class="input-field">
                    <label>Password</label>
                    <input type="password" name="password" required>
                    <div class="password error"></div>
                </div>
                <br>
                <a href="/reset" class="forgot-pass-link">Forgot password?</a>
                <br>
                <br>
                <button type="submit">Log In</button>
            </form>
            <div class="bottom-link">
                Don't have an account?
                <a href="/signup" id="signup-link">Sign up</a>
            </div>
        </div>


        <script>
            const form = document.querySelector('form');
            const emailError = document.querySelector('.email.error');
            const passwordError = document.querySelector('.password.error');
        
            form.addEventListener('submit', async (e) => {
                e.preventDefault();
                emailError.textContent = '';
                passwordError.textContent = '';
                const email = form.email.value;
                const password = form.password.value;
        
                try {
                    const res = await fetch('/login', {
                        method: 'POST',
                        body: JSON.stringify({email, password}),
                        headers: {'Content-Type': 'application/json'}
                    });
                    const data = await res.json();
        
                    if (data.errors) {
                        if (data.errors.email) {
                            emailError.textContent = data.errors.email;
                        }
                        if (data.errors.password) {
                            passwordError.textContent = data.errors.password;
                        }
                    }
        
                    if (data.user) {
                        if (data.user === 'user') {
                            location.replace('/personnel');
                        } else if (data.user === 'admin') {
                            location.replace('/dashboard');
                        } else {
                            alert(data.vfyError);
                        }
                    }
                } catch (err) {
                    console.error(err);
                }
            });
        </script>
</body>
</html>